<div class="container">
<% @page_title = "| Device Agent | New" %>

<h1 style="text-align: left;">Device Agent registration</h1>
<%= render 'form' %>
	<h2>Devices Using This Device Agent:</h2>
		<table class="field" width="50%">
		<thead>
			<tr>
				<td><u>URI</u></td>
				<td><u>Location</u></td>
                <% @devices.each do |d| %>
                    <tr>
                        <td><%= link_to d.uri, edit_device_agent_path(d) %></td>
                        <td><%= link_to d.location.print_name, edit_device_agent_path(d) %></td>
                    </tr>
                <% end %>
	</table><br />
<%= link_to 'Back', devices_path %>
</div>