<div class="container">
<% @page_title = "| Devices | Edit" %>

<h1 style="text-align: left;">Edit Device Information</h1>
<%= render 'form' %>
	<h2>Sensors for this device:</h2>
		<table class="field" width="50%">
		<thead>
			<tr>
				<td><u>Child Sensors</u></td>
				<td><u>Sensor Type</u></td>
		<% @sensors.each do |sensor| %>
			<tr>
				<td><%= link_to sensor.guid, edit_sensor_path(sensor) %></td>
				<td><%= sensor.sensor_type.property_type %></td>
			</tr>
		<% end %>
	</table><br />
<%= link_to 'Back', devices_path %>
</div>
