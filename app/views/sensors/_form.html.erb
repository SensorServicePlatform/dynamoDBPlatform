<%= form_for(@sensor) do |f| %>
    <% if @sensor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sensor.errors.count, "error") %> prohibited this sensor from being registered:</h2>

          <ul>
            <% @sensor.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table>
      <tr>
        <td class="field" width="50%"><%= f.label :guid %></td>
        <td class="field"><%= f.text_field :guid %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :sensor_type_id %></td>
        <td class="field"><%= f.select("sensor_type_id", options = @sensor_types.map { |s| [s.property_type, s.id] }) %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :min_value %></td>
        <td class="field"><%= f.text_field :min_value %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :max_value %></td>
        <td class="field"><%= f.text_field :max_value %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :device_guid %></td>
        <td class="field"><%= f.text_field :device_guid %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :device_id %></td>
        <td class="field"><%= f.text_field :device_id %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :predecessor %></td>
        <td class="field"><%= f.text_field :predecessor %></td>
      </tr>
      <tr>
        <td class="field"><%= f.label :metadata_json %></td>
        <td class="field"><%= f.text_field :metadata_json %></td>
      </tr>



      <tr>
        <td style="text-align: right;" colspan="2">
            <div class="actions">
              <%= f.submit %>
            </div>
        </td>
      </tr>
    </table>
<% end %>